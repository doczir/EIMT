@model IEnumerable<EIMT.Models.ServiceProviderViewModel>

@{
    ViewBag.Title = "ListServiceProviders";
}

<h2>ListServiceProviders</h2>

<p>
    @Html.ActionLink("Create New", "CreateServiceProvider", "Admin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditServiceProviderData", "Admin", new { id=item.Id }, null) |
            @Html.ActionLink("Change password", "EditServiceProviderPassword", "Admin", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "DeleteServiceProvider", "Admin", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
